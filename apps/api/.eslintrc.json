{
  "ignorePatterns": [
    "coverage/**",
    "dist/**"
  ],
  "overrides": [
    {
      "files": "**/*.{js,jsx,ts,tsx}",
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": "**/*.test.{js,jsx,ts,tsx}",
      "globals": {
        "jest/globals": true
      },
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style"
      ]
    }
  ]
}
